{% macro commentvote(comment, currentuser, votelinkbase, csrf_form) %}
  <div class="comment--vote">
    {%- set comvote = comment.votes.getvote(currentuser) %}
    {%- if not comvote -%}
      <form method="post" action="{{ votelinkbase }}/{{ comment.id }}/voteup" class="mui-form--inline">
        {{ csrf_form.hidden_tag() }}
        <button class="mui--text-caption action-btn" title="{% trans %}Vote up{% endtrans %}" type="submit"><i class="material-icons mui--align-top">arrow_drop_up</i></button>
      </form>
      <br/>
      <span class="comment--vote--count">{{ comment.votes.count }}</span><br/>
      <form method="post" action="{{ votelinkbase }}/{{ comment.id }}/votedown">
        {{ csrf_form.hidden_tag() }}
        <button class="mui--text-caption action-btn" title="{% trans %}Vote down{% endtrans %}" type="submit"><i class="material-icons mui--align-top">arrow_drop_down</i></button>
      </form>
    {%- elif not comvote.votedown -%}
      <form method="post" action="{{ votelinkbase }}/{{ comment.id }}/cancelvote" class="mui-form--inline">
        {{ csrf_form.hidden_tag() }}
        <button class="mui--text-caption action-btn" title="{% trans %}Withdraw vote{% endtrans %}" type="submit">&#x25b2;</button>
      </form>
      <br/>
      <span class="comment--vote--count">{{ comment.votes.count }}</span><br/>
      <form method="post" action="{{ votelinkbase }}/{{ comment.id }}/votedown" class="mui-form--inline">
        {{ csrf_form.hidden_tag() }}
        <button class="mui--text-caption action-btn" title="{% trans %}Vote down{% endtrans %}" type="submit"><i class="material-icons mui--align-top">arrow_drop_down</i></button>
      </form>
    {%- else -%}
      <form method="post" action="{{ votelinkbase }}/{{ comment.id }}/voteup" class="mui-form--inline">
        {{ csrf_form.hidden_tag() }}
        <button class="mui--text-caption action-btn" title="{% trans %}Vote up{% endtrans %}" type="submit"><i class="material-icons mui--align-top">arrow_drop_up</i></button>
      </form>
      <br/>
      <span class="comment--vote--count">{{ comment.votes.count }}</span><br/>
      <form method="post" action="{{ votelinkbase }}/{{ comment.id }}/cancelvote" class="mui-form--inline">
        {{ csrf_form.hidden_tag() }}
        <button class="mui--text-caption action-btn" title="{% trans %}Withdraw vote{% endtrans %}" type="submit"><i class="material-icons mui--align-top">arrow_drop_down</i></button>
      </form>
    {%- endif %}
  </div>
{% endmacro %}
{% macro commenttree(comments, document, space, currentuser, documenturl, csrf_form) %}
{%- for comment in comments %}
  <li class="comment">
    <div id="c{{ comment.id }}">
      {{ commentvote(comment, currentuser, documenturl+'/comments', csrf_form) }}
      <div class="comment--content">
        <div class="comment--header">
          <a class="collapse" href="#">[-]</a><a class="uncollapse hidden" href="#">[+]</a>
          {% if comment.state.DELETED -%}
            <span class="commenter">[{% trans %}deleted{% endtrans %}]</span>
          {%- else -%}
            <span class="commenter"><strong>{{ comment.user.pickername }}</strong></span>
            {%- if comment.user == document.user %}
              <span class="chip mui--bg-accent">
                <span class="chip__text">Proposer</span>
              </span>
            {% endif %}
            {% if not comment.state.DELETED and space.review_team and comment.user in space.review_team.users %}
              <span class="chip mui--bg-primary">
                <span class="chip__text">Reviewer</span>
              </span>
            {% endif %}
            <span class="mui--text-caption mui--text-accent">{{ comment.created_at|age }}</span>
            {%- if comment.edited_at %}
              <span class="mui--text-caption mui--text-accent">({% trans %}edited{% endtrans %} {{ comment.edited_at|age }})</span>
            {%- endif %}
          {%- endif %}
        </div>
        <div class="comment--body">
          {% if not comment.state.DELETED -%}
            {{ comment.message }}
          {%- endif %}
          <div data-id="{{ comment.id }}" class="comment--footer">
            {% if not comment.state.DELETED %}
              {% if g.user %}<a title="{% trans %}Reply{% endtrans %}" class="comment-reply" href="#c{{ comment.id }}">[reply]</a>{% endif %}
              {%- with cperms = comment.permissions(g.user, g.permissions) %}
                {% if 'edit-comment' in cperms %}<a title="{% trans %}Edit{% endtrans %}" class="comment-edit" href="#c{{ comment.id }}">[{% trans %}edit{% endtrans %}]</a>{% endif %}
                {% if 'delete-comment' in cperms %}<a title="{% trans %}Delete{% endtrans %}" class="comment-delete" href="#c{{ comment.id }}">[{% trans %}delete{% endtrans %}]</a>{% endif %}
              {%- endwith %}
            {%- endif %}
            <a title="Permalink" class="comment-permalink" href="#c{{ comment.id }}">[{% trans %}link{% endtrans %}]</a>
            {% if comment.parent %}<a title="{% trans %}Parent{% endtrans %}" class="comment-parent" href="#c{{ comment.parent.id }}">[{% trans %}parent{% endtrans %}]</a>{% endif %}
          </div>
        </div>
      </div>
    </div>
    {% if comment.children %}
      <ul class="mui-list--unstyled comment--children">
        {{ commenttree(comment.sorted_children(), document, space, currentuser, documenturl, csrf_form) }}
      </ul>
    {% endif %}
  </li>
{% endfor -%}
{% endmacro %}
