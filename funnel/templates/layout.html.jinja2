{% extends "baseframe.html.jinja2" -%}
{% from "baseframe/components.html.jinja2" import hgtopnav with context %}

{% block description %}{% if g.profile %}{{ g.profile.description|striptags }}{% endif %}{% endblock %}

{% block sidedrawer -%}
{%- endblock %}

{% block header -%}
  {% macro site_title() %}
    <div class-"mui--text-dark">
      {%- if g.profile -%}
        <a href="{{ url_for('index') }}" class="header__site-title__item mui--text-accent"><i class="material-icons mui--text-subhead mui--align-center">filter_list</i></a> <i class="material-icons mui--text-subhead mui--align-center">chevron_right</i>
        <a href="{{ g.profile.url_for() }}" class="header__site-title__item">{{ g.profile.title }}</a>
        {%- if space %}
          {%- if space.parent_space %}
            <i class="material-icons mui--text-subhead mui--align-center">chevron_right</i>
            <a href="{{ space.parent_space.url_for() }}" class="header__site-title__item">{{ space.parent_space.short_title() }}</a>
          {%- endif %}
          <i class="material-icons mui--text-subhead mui--align-center">chevron_right</i>
          <a href="{{ space.url_for() }}" class="header__site-title__item">{{ space.short_title() }}</a>
        {%- endif %}
      {%- else -%}
        <a href="{{ url_for('index') }}" class="header__site-title__item"><i class="material-icons mui--text-subhead mui--align-center">filter_list</i> {{ config['SITE_TITLE'] }}</a>
      {%- endif -%}
    </div>
  {% endmacro %}
  {{ hgtopnav(site_title=site_title()) }}
{%- endblock %}

{%- block image_src %}
  <link rel="image_src" href="{{ url_for('static', filename='img/logo_og.png') }}" />
  <meta property="og:image" content="{{ url_for('static', filename='img/logo_og.png') }}" />
{%- endblock %}

{% block contenthead %}
  {% block headline -%}
    <div class="content-head">
      <div class="mui-container">
        <div class="grid">
          <div class="grid__col-xs-12">
            {% block top_title %}
            <h1 id="channel-header" class="mui--text-headline">
              {{ self.title()|e }}
            </h1>
            {% endblock %}
          </div>
        </div>
      </div>
    </div>
  {%- endblock %}
{% endblock %}

{%- block baseheadline %}
  {% block ads %}
  {% endblock %}
{% endblock %}

{% block basecontent %}
  <div class="page-content">
    {% block content %}{% endblock %}
  </div>
{% endblock %}
