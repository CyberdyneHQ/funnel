{% extends "layout.html.jinja2" %}
{% from "macros.html.jinja2" import rsvpform, rsvpscript %}
{% from "baseframe/forms.html" import renderfield %}
{% block title %}{{ space.title }}{% endblock %}
{% block pageheaders %}
{% endblock %}

{% block content %}
  <div class="grid" id="scan-badge-wrapper">
    {% raw %}
      <script id='scan-badge-template' type='text/ractive'>

        <div class="grid__col-xs-12 grid__col-lg-4">
          <h3 class="mui--text-title">{{ eventTitle }}</h3>
          <p class="mui--text-subhead">Please scan your badge to check-in</p>
          {{#if cameras}}
            <h5>Cameras</h5>
            {{#cameras:camera}}
              {{#if activeCameraId === cameras[camera].id}}
                {{#if !qrReaderOn}}
                <button on-click="startCamera(cameras[camera])" class="mui-btn mui-btn--small mui-btn--raised mui-btn--primary">Start {{ formatName(cameras[camera].name) }}</button>
                {{/if}}
              {{else}}
                <button on-click="startCamera(cameras[camera])" class="mui-btn mui-btn--small mui-btn--raised mui-btn--primary">Start {{ formatName(cameras[camera].name) }}</button>
              {{/if}}
            {{/}}
          {{else}}
            <p>No camera found</p>
          {{/if}}
        </div>

        <div class="grid__col-xs-12 grid__col-lg-8">
          <video id="reader" class="qrcode-reader"></video>
        </div>

        <div id="status-msg" class="modal mui--hide" tabindex="-1" role="dialog">
          <div class="modal__header">
            <a class="modal__close" href="javascript:void(0);" aria-label="close" rel="modal:close"><i class="material-icons">clear</i></a>
            <h3 class="mui--text-title">Check in status</h3>
          </div>
          <div class="modal__body">
            {{#if scanning}}
              <h4>Scanning <i class="fa fa-spinner fa-spin fa-2x"></i></h4>
            {{elseif attendeeFound}}
              <h4>Hello {{attendeeName}},</h4>
              <p>Thank you for choosing to participate in {{ spaceTitle }} and for being a part of this growing community.</p>
              <p>HasGeek</p>
            {{else}}
              <h4>Attendee details not found</h4>
            {{/if}}
            <button type="button" class="mui-btn mui-btn--small mui-btn--raised mui-btn--accent" data-dismiss="modal">Close</button>
          </div>
      </script>
    {% endraw %}
  </div>
{% endblock %}

{% block footerscripts %}
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/webrtc-adapter/3.3.3/adapter.min.js"></script>
  <script type="text/javascript" src="https://rawgit.com/schmich/instascan-builds/master/instascan.min.js"></script>
  <script>
    $(document).ready(function() {

      var checkinApiUrl = "{{ url_for('checkin_puk', profile=space.profile.name, space=space.name, name=event.name, puk='puk') }}"

      var badgeScanComponent = new Ractive({
        el: '#scan-badge-wrapper',
        template: '#scan-badge-template',
        data: {
          spaceTitle: "{{ space.title }}",
          eventTitle: "{{ event.title }}",
          scanner: {},
          activeCameraId: '',
          cameras: [],
          scanning: false,
          attendeeName: '',
          attendeeFound: false,
          formatName: function (cameraName) {
            return cameraName || "camera";
          }
        },
        startCamera: function (camera) {
          this.set('activeCameraId', camera.id);
          this.set('qrReaderOn', true);
          window.scanner.start(camera);
        },
        oncomplete: function() {

          window.scanner = new Instascan.Scanner({
            video: document.getElementById('reader'),
            scanPeriod: 5
          });

          window.scanner.addListener('scan', function (qrcode) {
            if (qrcode.length === 16) {
              badgeScanComponent.set('scanning', true);
              $("#status-msg").modal();
              var url = checkinApiUrl.replace('puk', qrcode.substring(0,8));
              var formValues = "checkin=t&csrf_token=" + $("meta[name='csrf-token']").attr('content');
              $.ajax({
                type: 'POST',
                url:  url,
                data : formValues,
                timeout: 5000,
                dataType: 'json',
                success: function(response) {
                  badgeScanComponent.set({
                    'scanning':false,
                    'attendeeFound': true
                  });
                  badgeScanComponent.set('attendeeName', response.attendee.fullname);
                },
                error: function() {
                  badgeScanComponent.set({
                    'scanning': false,
                    'attendeeFound': false
                  });
                }
              });
            }
          });

          Instascan.Camera.getCameras().then(function (cameras) {
            badgeScanComponent.set('cameras', cameras);
          }).catch(function (e) {
            console.error(e);
          });
        }
      });
      
    });
  </script>
{% endblock %}
